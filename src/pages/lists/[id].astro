---
import Layout from "@/layouts/Layout.astro";
import ListDetailsPage from "@/components/dashboard/ListDetailsPage.tsx";

const { id } = Astro.params;
const listId = parseInt(id || "0", 10);
---

<Layout title="Szczegóły Listy Zakupów">
  <div class="container mx-auto p-4">
    {
      listId ? (
        <ListDetailsPage client:load listId={listId} />
      ) : (
        <div class="space-y-4">
          <a href="/lists" class="text-blue-500 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300">
            ← Powrót do list
          </a>
          <p>Nieprawidłowy identyfikator listy.</p>
        </div>
      )
    }
  </div>
</Layout>
