---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/auth/LoginForm";

const redirectUrl = Astro.url.searchParams.get("redirectUrl");
---

<Layout title="Login | Zakupek">
  <main class="flex-grow w-full flex items-center justify-center p-4 bg-gradient-to-br from-blue-50 to-purple-50">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-6 sm:p-8">
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold mb-2 text-gray-900">Logowanie</h1>
        <p class="text-gray-600">Wprowadź dane swojego konta, aby się zalogować</p>
      </div>

      <LoginForm client:load />

      <div class="mt-6 pt-4 border-t border-gray-200 text-center">
        <p class="text-sm text-gray-600">
          Nie masz jeszcze konta?
          <a href={`/register${redirectUrl ? `?redirectUrl=${encodeURIComponent(redirectUrl)}` : ''}`} class="text-blue-600 hover:text-blue-800 font-medium">Zarejestruj się</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
